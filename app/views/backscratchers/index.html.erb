<p id="notice"><%= notice %></p>

<h1>Backscratchers</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Price</th>
      <th>Sizes</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @backscratchers.each do |backscratcher| %>
      <tr>
        <td><%= backscratcher.name %></td>
        <td><%= backscratcher.description %></td>
        <td><%= backscratcher.price %></td>
        <td><%= backscratcher.sizes %></td>
        <td><%= link_to 'Show', backscratcher %></td>
        <td><%= link_to 'Edit', edit_backscratcher_path(backscratcher) %></td>
        <td><%= link_to 'Destroy', backscratcher, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

